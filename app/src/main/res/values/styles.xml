<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary" parent="android:TextAppearance.DeviceDefault.Large">@color/secondary</item>
    </style>

    <style name="CalenderViewDateMediumText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/selector_date_text_color</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="lineBreak" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:weekSeparatorLineColor">@color/red</item>
    </style>
</resources>