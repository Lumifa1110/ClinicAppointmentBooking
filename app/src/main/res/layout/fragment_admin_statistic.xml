<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_admin_statistic"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AdminStatistic">
    <LinearLayout
        android:background="@drawable/box_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal"
            android:layout_marginVertical="5sp"
            android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="@color/black"
                android:layout_marginHorizontal="20sp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description"
                    android:scaleType="fitXY"
                    android:src="@drawable/users"
                    android:tint="@color/white"
                    tools:ignore="UseAppTint"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/numofAll"
                    android:text="Tổng số tài khoản"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/countAll"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:backgroundTint="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="5sp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="@color/black"
                android:layout_marginHorizontal="20sp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description"
                    android:scaleType="fitXY"
                    android:src="@drawable/users"
                    android:tint="@color/white"
                    tools:ignore="UseAppTint"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/numofSpec"
                    android:text="Tổng số chuyên khoa"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/countSpec"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:backgroundTint="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="5sp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="@color/black"
                android:layout_marginHorizontal="20sp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description"
                    android:scaleType="fitXY"
                    android:src="@drawable/users"
                    android:tint="@color/white"
                    tools:ignore="UseAppTint"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/numofWaitDoc"
                    android:text="Số lượng cần duyệt"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/countWaitDoc"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:backgroundTint="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="5sp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="@color/black"
                android:layout_marginHorizontal="20sp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description"
                    android:scaleType="fitXY"
                    android:src="@drawable/users"
                    android:tint="@color/white"
                    tools:ignore="UseAppTint"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/numofDoc"
                    android:text="Số lượng Bác sĩ"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/countDoc"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:backgroundTint="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="5sp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="@color/black"
                android:layout_marginHorizontal="20sp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description"
                    android:scaleType="fitXY"
                    android:src="@drawable/users"
                    android:tint="@color/white"
                    tools:ignore="UseAppTint"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/numofPat"
                    android:text="Số lượng Bệnh nhân"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/countPat"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:backgroundTint="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="5sp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardBackgroundColor="@color/black"
                android:layout_marginHorizontal="20sp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description"
                    android:scaleType="fitXY"
                    android:src="@drawable/users"
                    android:tint="@color/white"
                    tools:ignore="UseAppTint"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/numofMedicine"
                    android:text="Số lượng loại thuốc"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/countMedicine"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>