    <LinearLayout
        android:id="@+id/registerBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_login"
        android:layout_marginTop="60sp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/registerTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Đăng Ký"
            android:textAlignment="center"
            android:textColor="#348F6C"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/phoneET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="15sp"
            android:background="@drawable/custom_et"
            android:drawableLeft="@drawable/phone_call"
            android:drawablePadding="10dp"
            android:hint="Số Điện Thoại"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/passwordET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="15sp"
            android:background="@drawable/custom_et"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="10dp"
            android:hint="Mật Khẩu"
            android:padding="10dp"
            android:textSize="18sp"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="24dp" />

        <EditText
            android:id="@+id/nameET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="15sp"
            android:background="@drawable/custom_et"
            android:drawableLeft="@drawable/username"
            android:drawablePadding="10dp"
            android:hint="Họ Và Tên"
            android:padding="10dp"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="15sp"
            android:background="@drawable/custom_et"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/chuyenKhoaET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="15sp"
            android:background="@drawable/custom_et"
            android:drawableLeft="@drawable/work"
            android:drawablePadding="10dp"
            android:hint="Chuyên Khoa"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/addressET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="15sp"
            android:background="@drawable/custom_et"
            android:drawableLeft="@drawable/gps"
            android:drawablePadding="10dp"
            android:hint="Địa Chỉ"
            android:padding="10dp"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="15sp"
            android:layout_weight="1"
            android:background="@drawable/circle_design"
            android:text="Đăng Ký"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/emailET" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerBox">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã có tài khoản? " />
        <TextView
            android:id="@+id/dangNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Nhập"
            android:textStyle="bold"
            android:textColor="#444EFF"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/backBTN"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>