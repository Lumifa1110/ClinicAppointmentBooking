<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_approval_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E1E1E1"
    tools:context=".Fragment.ApprovalList">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/appoinmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/wrapper_rounded_primary">
        <TextView
            android:layout_width="260dp"
            android:textAlignment="center"
            android:padding="10dp"
            android:text="Số tài khoản bác sĩ cần duyệt"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/number"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:text="0"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:background="@drawable/box_white"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/approvalRV"
        android:layout_marginVertical="5dp"
        android:layout_marginBottom="25sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>