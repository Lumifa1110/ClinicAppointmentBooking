<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_approval_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ApprovalList">
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchWaitDoc"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="5sp"
        android:layout_marginVertical="5sp"
        android:layout_height="50dp"
        android:background="@drawable/wrapper_rounded_primary"
        app:closeIcon="@drawable/close_search_icon"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/approvalRV"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>