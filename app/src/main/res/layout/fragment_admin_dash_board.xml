<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/description"
    android:background="@color/background_color"
    app:barrierMargin="0dp"
    tools:context=".Fragment.AdminDashBoard">

    <LinearLayout
        android:id="@+id/adminDashBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layoutAvatar"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/header_admin_bg"
                android:gravity="top"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:id="@+id/avatarCardView"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="250dp">
                    <ImageView
                        android:id="@+id/adminAvatar"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:contentDescription="@string/description"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/adminName"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_name"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adminButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/box_items"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutAvatar"
                app:layout_constraintBottom_toTopOf="@+id/countingBoard">
                <androidx.cardview.widget.CardView
                    android:id="@+id/listDoctors"
                    android:layout_gravity="center"
                    android:backgroundTint="#2F7AE5"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:contentDescription="@string/description"
                            android:src="@drawable/doctors"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:tint="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/labelDoctors"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/listPatients"
                    android:layout_gravity="center"
                    android:backgroundTint="#2F7AE5"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/patient"
                            android:contentDescription="@string/description"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:tint="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/labelPatients"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <GridLayout
                android:id="@+id/countingBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="3"
                android:layout_marginBottom="50dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/adminButtons">
                <androidx.cardview.widget.CardView
                    android:id="@+id/countingAll"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/primary_color"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_color_4">
                        <TextView
                            android:id="@+id/titleAll"
                            android:text="@string/labelUsers"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="25dp" />
                        <TextView
                            android:id="@+id/numOfAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="0"
                            android:textColor="@color/green"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_marginStart="25dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/countingDoctor"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/main_color"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_color_2">
                        <TextView
                            android:id="@+id/titleDoctor"
                            android:text="@string/labelDoctors"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="25dp" />
                        <TextView
                            android:id="@+id/numOfDoctor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="0"
                            android:textColor="@color/red"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_marginStart="25dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/countingDPatient"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/main_color"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_color_3">
                        <TextView
                            android:id="@+id/titlePatients"
                            android:text="@string/labelPatients"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="25dp" />
                        <TextView
                            android:id="@+id/numOfPatient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="0"
                            android:textColor="@color/yellow"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_marginStart="25dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>